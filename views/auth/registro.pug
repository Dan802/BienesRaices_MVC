extends ../layout/index

block content
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Real 
            span.font-normal State
        h2.text-center.text-2xl.font-extrabold= page

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=error.msg

    .mt-1.mx-auto.max-w-md
        .bg-white.py-8.px-4.shadow
            form.space-y-5(method="POST" action="/auth/registration")
                //- crose side request foregin 
                //- input(type="hidden" name="_csrf" value=csrfToken) 
                
                div 
                    label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="name") Name
                    input#name.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Name" type="text" name="name" value= usuario ? usuario.name : '')

                div 
                    label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="email")  Email
                    input#email.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Email" type="email" name="email" value= usuario ? usuario.email : '')

                div 
                    label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="password") Password
                    input#password.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Password" type="password" name="password")

                div 
                    label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="repeat_password") Repeat Password
                    input#repeat_password.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repeat your password" type="password" name="repeat_password")

                input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Create Account")

                .flex.items-center.justify-between 
                    a.text-gray-500.text-xs(href="/auth/login") Do you already have an account? Log in 
                    a.text-gray-500.text-xs(href="/auth/forgot-password") Forgot my password

