extends ../layout/admin


block content
    h2(class="text-2xl font-extrabold text-center my-10")= page

    a(href="/my-properties" class="rounded py-2 px-10 bg-indigo-600 hover:bg-indigo-700 text-sm font-bold text-center text-white uppercase my-5 inline-block w-full sm:w-auto") Back

    //- pre= JSON.stringify(mensajes, undefined, 2)

    div(class="mx-auto max-w-4xl bg-white shadow")

        if mensajes.length 
            ul 
                each mensaje in mensajes
                    li(class="border-gray-200 border-b p-5")
                    
                        p(class="font-bold text-gray-800") Name: 
                            span(class="font-normal")= mensaje.usuario.name
                        p(class="font-bold text-gray-800") Email:  
                            span(class="font-normal")= mensaje.usuario.email
                        p(class="font-bold text-gray-800") Message: 
                            span(class="font-normal")= mensaje.mensaje
                        p(class="font-bold text-gray-800") Send: 
                            span(class="font-normal")= formatearFecha(mensaje.createdAt)
        else 
            p(class="text-center text-gray-600 p-5 ") There is not messages
        
