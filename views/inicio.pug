extends ./layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block content 
    div(class="py-5")
        h1(class="text-center text-4xl font-extrabold capitalize") Ubication on the map

        div(class="flex flex-col md:flex-row items-center py-10 gap-4")
            h2(class="text-sm uppercase text-gray-800 font-bold") Filter Properties:

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="categorias" class="text-sm w-24 md:w-auto md:mr-2 uppercase text-gray-500 font-bold") Categories
                select(id="categorias" class="md:flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow")
                    option(value="") --Select--
                    each categoria in categorias
                        option(value=categoria.id)= categoria.nombre

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="precios" class="text-sm w-24 md:w-auto md:mr-2 uppercase text-gray-500 font-bold") Prices
                select(id="precios" class="md:flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow")
                    option(value="") --Select--
                    each precio in precios
                        option(value=precio.id)= precio.nombre

        div(id="mapa-inicio" class="h-[600px] mt-5")

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10 capitalize") Houses for sale
            //- pre= JSON.stringify(casas, undefined, 2)

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each propiedad in casas 
                    include ./templates/card

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10 capitalize") Apartments for sale
            //- pre= JSON.stringify(departamentos, undefined, 2)

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each propiedad in departamentos 
                    include ./templates/card


block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapaInicio.js")


